---
import BaseHead from '@components/BaseHead.astro'
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'
import ProviderAnimations from '@components/ProviderAnimations.astro'
import ProviderTheme from '@components/ProviderTheme.astro'
import TwSizeIndicator from '@components/TwSizeIndicator.astro'

interface Props {
    title: string
    description?: string
    image?: string
    articleDate?: string
}

const { title, description, image: ogImage, articleDate } = Astro.props
---

<html lang='en' class='scroll-smooth'>
    <head>
        <BaseHead {title} {description} {ogImage} {articleDate} />
        <ProviderTheme />
        <ProviderAnimations />
    </head>
    <body class='bg-white text-stone-950 dark:bg-[#0a0910] dark:text-white'>
        <main class='mt-4 grid gap-12 overflow-hidden px-5 antialiased sm:mx-auto sm:max-w-2xl sm:px-8 md:max-w-6xl md:overflow-visible lg:px-0'>
            <Header />
            <slot />
            <Footer />
        </main>
        <TwSizeIndicator />
        <style>
            body {
                margin-left: calc(100vw - 100%); /* prevent layout shift */
            }
        </style>
    </body>
</html>
