{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "sourceMap": true,                          // TODO Set to 'false' when publishing
    "jsx": "react",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,                     // TODO Set to 'false' when publishing
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": ".",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*"]
}
